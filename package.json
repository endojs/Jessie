{
  "name": "@jessie.js/monorepo",
  "private": true,
  "useWorkspaces": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=14.14.0"
  },
  "type": "module",
  "devDependencies": {
    "@endo/eslint-config": "^0.3.8",
    "@typescript-eslint/parser": "^5.21.0",
    "ava": "^3.12.1",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.7.0",
    "eslint-plugin-jsx-a11y": "^6.4.0",
    "eslint-plugin-prettier": "^3.2.0",
    "lerna": "^5.0.0",
    "lerna-update-wizard": "^0.17.5",
    "prettier": "^1.18.2",
    "typescript": "^4.6.4"
  },
  "scripts": {
    "clean": "lerna clean",
    "depcheck": "node scripts/check-mismatched-dependencies.js",
    "update": "lernaupdate --dedupe",
    "prettier": "lerna run prettier",
    "lint": "lerna run lint",
    "lint-fix": "lerna run --no-bail lint-fix",
    "test": "lerna run --no-bail test",
    "postinstall": "patch-package",
    "patch-package": "patch-package",
    "build": "lerna run build"
  },
  "dependencies": {
    "patch-package": "^6.2.2"
  }
}
